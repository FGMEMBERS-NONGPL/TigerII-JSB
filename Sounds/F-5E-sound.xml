			</volume>
		</engine>

		<engine>
			<name>burner1</name>
			<mode>looped</mode>
			<path>Aircraft/TigerII-JSB/Sounds/burner.wav</path>
			<condition>
				<property>engines/engine[0]/afterburner</property>
