			</condition>
			<position>
				<x>6.0</x>
				<y>0.0</y>
				<z>0.0</z>
			</position>
			<orientation>
				<x>90.0</x>
				<y>0.0</y>
				<z>0.0</z>
				<inner-angle>80.0</inner-angle>
				<outer-angle>110.0</outer-angle>
				<outer-gain>0.5</outer-gain>
			</orientation>
			<volume>
				<property>engines/engine[0]/n2</property>
				<factor>0.08</factor>
				<min>0.4</min>
				<max>1.0</max>
			</volume>
			<pitch>
				<property>engines/engine[0]/n2</property>
				<factor>0.005</factor>
				<min>0</min>
				<max>0.7</max>
			</pitch>
		</engine>
  
