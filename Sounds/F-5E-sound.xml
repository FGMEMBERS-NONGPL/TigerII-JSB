			</volume>
		</engine>

		<engine>
			<name>engine2-from-cockpit</name>
			<mode>looped</mode>
			<path>Aircraft/TigerII-JSB/Sounds/milpower.wav</path>
			<condition>
				<property>/engines/engine[1]/running</property>
				<property>/sim/current-view/internal</property>
			</condition>
