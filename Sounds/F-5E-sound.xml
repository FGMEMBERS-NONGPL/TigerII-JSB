				<property>/controls/throttle[0]</property>
				<factor>1</factor>
				<min>0.4</min>
				<max>0.5</max>
			</volume>
		</engine>
    
		<engine>
			<name>burner2</name>
			<mode>looped</mode>
			<path>Aircraft/TigerII-JSB/Sounds/burner.wav</path>
			<condition>
				<property>engines/engine[1]/afterburner</property>
				<not>
					<property>/sim/current-view/internal</property>
					<property>engines/engine/out-of-fuel</property>
				</not>
			</condition>
			<orientation>
				<x>0.0</x>
